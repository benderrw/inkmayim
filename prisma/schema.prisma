generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model Contatos {
  id          String @id @default(uuid())
  nome        String
  email       String @unique
  criadoEm    DateTime @default(now())
  telefones   Telefones[]
  mensagens   Mensagens[]
}

model Mensagens {
  id          String @id @default(uuid())
  mensagem    String
  imagens     Json? // Array de URLs das imagens enviadas
  criadoEm    DateTime @default(now())
  contatoId   String
  contato     Contatos @relation(fields: [contatoId], references: [id], onDelete: Cascade)
}

model Telefones {
  id          String   @id @default(uuid())
  telefone    String   @unique
  criadoEm    DateTime @default(now())
  contatoId   String
  contato     Contatos @relation(fields: [contatoId], references: [id], onDelete: Cascade)
}

